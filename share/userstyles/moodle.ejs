/* ==UserStyle==
@name           Moodle: Dark Reign (Base16)
@namespace      USO Archive
@author         Lubo Kanev / tcmal
==/UserStyle== */

@-moz-document domain("moodle2.maths.ed.ac.uk") {
    :root {
        --base00: #<%- base["00"]["hex"] %>;
        --base01: #<%- base["01"]["hex"] %>;
        --base02: #<%- base["02"]["hex"] %>;
        --base03: #<%- base["03"]["hex"] %>;
        --base04: #<%- base["04"]["hex"] %>;
        --base05: #<%- base["05"]["hex"] %>;
        --base06: #<%- base["06"]["hex"] %>;
        --base07: #<%- base["07"]["hex"] %>;
        --base08: #<%- base["08"]["hex"] %>;
        --base09: #<%- base["09"]["hex"] %>;
        --base0A: #<%- base["0A"]["hex"] %>;
        --base0B: #<%- base["0B"]["hex"] %>;
        --base0C: #<%- base["0C"]["hex"] %>;
        --base0D: #<%- base["0D"]["hex"] %>;
        --base0E: #<%- base["0E"]["hex"] %>;
        --base0F: #<%- base["0F"]["hex"] %>;
    }
    
    body
    {
        background-color: var(--base02) !important;
        color: var(--base07) !important;
    }

    #region-main
    {
        background-color: var(--base01);
    }

    .description-block
    {
        background-color: var(--base02) !important;
        color: red !important;
    }

    tr.head td
    {
        background-color: var(--base02) !important;
        color: red !important;
    }

    div.new-post a
    {
        background-color: var(--base02) !important;
        color: red !important;
    }

    p
    {
        color: var(--base07) !important;
    }

    .forumpost
    {
        background-color: var(--base00) !important;
    }

    .courses .coursebox:hover,
    .course_category_tree .courses > .paging.paging-morelink:hover
    {
        background-color: var(--base00) !important;
    }

    .courses .coursebox.even
    {
        background-color: var(--base00) !important;
    }

    .block .content
    {
        background-color: var(--base01) !important;
    }

    .block .header .block_action
    {
        background-color: var(--base01) !important;
    }

    .block .header h2
    {
        background-color: var(--base01) !important;
    }

    .block
    {
        background-color: var(--base01) !important;
    }

    .navbar .brand
    {
        color: var(--base07) !important;
    }

    .container-fluid
    {
        background-color: var(--base02) !important;
    }

    .course-content .current
    {
        background-color: #404040 !important;
    }

    .breadcrumb > li
    {
        text-shadow: 0 1px 0 var(--base00) !important;
    }

    .user-enroller-panel .uep-search-results .users tbody tr:hover > td,
    table.grading-report tbody tr:hover > td,
    .forumheaderlist tbody tr:hover > td,
    .generaltable tbody tr:hover > td,
    table.flexible tbody tr:hover > td,
    .category_subcategories tbody tr:hover > td,
    table#modules tbody tr:hover > td,
    table#permissions tbody tr:hover > td,
    .user-enroller-panel .uep-search-results .users tbody tr:hover > th,
    table.grading-report tbody tr:hover > th,
    .forumheaderlist tbody tr:hover > th,
    .generaltable tbody tr:hover > th,
    table.flexible tbody tr:hover > th,
    .category_subcategories tbody tr:hover > th,
    table#modules tbody tr:hover > th,
    table#permissions tbody tr:hover > th
    {
        background-color: var(--base02) !important;
    }

    td.submissionnotgraded,
    div.submissionnotgraded
    {
        color: var(--base07) !important;
    }

    table#explaincaps tbody > tr:nth-child(odd) > td,
    table#defineroletable tbody > tr:nth-child(odd) > td,
    table.grading-report tbody > tr:nth-child(odd) > td,
    table#listdirectories tbody > tr:nth-child(odd) > td,
    table.rolecaps tbody > tr:nth-child(odd) > td,
    table.userenrolment tbody > tr:nth-child(odd) > td,
    table#form tbody > tr:nth-child(odd) > td,
    form#movecourses table tbody > tr:nth-child(odd) > td,
    #page-admin-course-index .editcourse tbody > tr:nth-child(odd) > td,
    .forumheaderlist tbody > tr:nth-child(odd) > td,
    table.flexible tbody > tr:nth-child(odd) > td,
    .generaltable tbody > tr:nth-child(odd) > td,
    table#explaincaps tbody > tr:nth-child(odd) > th,
    table#defineroletable tbody > tr:nth-child(odd) > th,
    table.grading-report tbody > tr:nth-child(odd) > th,
    table#listdirectories tbody > tr:nth-child(odd) > th,
    table.rolecaps tbody > tr:nth-child(odd) > th,
    table.userenrolment tbody > tr:nth-child(odd) > th,
    table#form tbody > tr:nth-child(odd) > th,
    form#movecourses table tbody > tr:nth-child(odd) > th,
    #page-admin-course-index .editcourse tbody > tr:nth-child(odd) > th,
    .forumheaderlist tbody > tr:nth-child(odd) > th,
    table.flexible tbody > tr:nth-child(odd) > th,
    .generaltable tbody > tr:nth-child(odd) > th
    {
        background-color: var(--base02) !important;
    }

    td.submissionnotgraded,
    div.submissionnotgraded
    {
        background-color: var(--base02) !important;
    }

    table#form td.submit,
    .form-buttons,
    .path-admin .buttons,
    #fitem_id_submitbutton,
    .fp-content-center form + div,
    div.backup-section + form,
    #fgroup_id_buttonar
    {
        background-color: var(--base02) !important;
    }

    .fp-pathbar
    {
        background-color: var(--base02) !important;
    }

    .filemanager-toolbar
    {
        background-color: var(--base02) !important;
    }

    .filemanager-container,
    .filepicker-filelist
    {
        background-color: var(--base02) !important;
    }

    .block_simple_clock .clock
    {
        color: var(--base05) !important;
    }

    /* span {
        background: none !important;
        color: red !important;
    } */
    .calendar_event_course
    {
        background-color: var(--base05) !important;
        border-radius: 99px;
    }

    .block .calendar-event-panel .yui3-overlay-content
    {
        background-color: var(--base02) !important;
    }

    .navbar-text
    {
        color: var(--base05) !important;
    }

    .block .header h2
    {
        color: var(--base05) !important;
    }

    .coursebox
    {
        background: var(--base00) !important;
    }

    textarea,
    input[type="text"],
    input[type="password"],
    input[type="datetime"],
    input[type="datetime-local"],
    input[type="date"],
    input[type="month"],
    input[type="time"],
    input[type="week"],
    input[type="number"],
    input[type="email"],
    input[type="url"],
    input[type="search"],
    input[type="tel"],
    input[type="color"],
    .uneditable-input
    {
        background-color: var(--base05) !important;
    }

    input[name="searchwikicontent"] + input[type="submit"],
    select + input[type="submit"],
    input[type="text"] + input[type="button"],
    input[type="password"] + input[type="submit"],
    input[type="text"] + button,
    input[type="text"] + input[type="submit"]
    {
        background: var(--base05) !important;
    }

    .nav-collapse .nav > li > a,
    .nav-collapse .dropdown-menu a
    {
        color: var(--base05) !important;
        background: var(--base02) !important;
        text-shadow: none !important;
    }

    body:not(.jsenabled) .langmenu:hover > .dropdown-menu,
    .langmenu.open > .dropdown-menu
    {
        background: var(--base02) !important;
    }

    .navbar-fixed-top .navbar-inner,
    .navbar-fixed-bottom .navbar-inner
    {
        background: var(--base02) !important;
    }

    td.submissionstatussubmitted,
    div.submissionstatussubmitted,
    a:link.submissionstatussubmitted
    {
        color: white;
    }

    textarea,
    input[type="text"],
    input[type="password"],
    input[type="datetime"],
    input[type="datetime-local"],
    input[type="date"],
    input[type="month"],
    input[type="time"],
    input[type="week"],
    input[type="number"],
    input[type="email"],
    input[type="url"],
    input[type="search"],
    input[type="tel"],
    input[type="color"],
    .uneditable-input
    {
        background-color: var(--base00) !important;
        border-color: #494949 !important;
        color: var(--base05) !important;
    }

    input[name="searchwikicontent"] + input[type="submit"],
    select + input[type="submit"],
    input[type="text"] + input[type="button"],
    input[type="password"] + input[type="submit"],
    input[type="text"] + button,
    input[type="text"] + input[type="submit"]
    {
        background: var(--base0C) !important;
        color: var(--base00) !important;
        border: none !important;
        text-shadow: none !important;
    }

    button,
    input.form-submit,
    input[type="button"],
    input[type="submit"],
    input[type="reset"]
    {
        background: var(--base0C) !important;
        border: none !important;
        text-shadow: none !important;
        color: var(--base07) !important;
    }

    .course_category_tree .category > .info
    {
        background: var(--base00) !important;
        border: 1px solid #505050 !important;
    }

    .mform fieldset.collapsible legend a.fheader
    {
        color: var(--base05) !important;
    }

    body #region-main .mform:not(.unresponsive) .femptylabel .felement
    {
        color: var(--base05) !important;
    }

    td.submissionstatussubmitted,
    div.submissionstatussubmitted,
    a:link.submissionstatussubmitted
    {
        background: #404040;
        color: var(--base05);
    }

    td.submissiongraded,
    div.submissiongraded,
    td.earlysubmission,
    div.earlysubmission
    {
        color: var(--base08);
    }


    .card
    {
        background-color: var(--base01);
    }

    #page-mod-quiz-view table.quizattemptsummary tr.bestrow td
    {
        border: none;
        background: none;
    }

    table tr
    {
        color: var(--base07);
    }

    table tr:hover
    {
        color: var(--base07) !important;
        background: var(--base03);
    }

    a
    {
        color: var(--base0C) !important;
    }

    .qnbutton
    {
        background-color: var(--base02) !important;
    }

    .qnbutton.notyetanswered .trafficlight
    {
        background-color: var(--base01) !important;
    }

    .qnbutton.answersaved .trafficlight
    {
        background: var(--base02) !important;
    }

    .qnbutton.incorrect .trafficlight
    {
        background: var(--base08) !important;
    }

    .qnbutton.correct .trafficlight
    {
        background: var(--base0B) !important;
    }

    .info
    {
        background: var(--base00) !important;
        color: var(--base07);
        border: none !important;
    }

    .info h3
    {
        color: var(--base0E) !important;
    }

    .que .formulation,
    .outcome
    {
        background: var(--base00) !important;
        color: var(--base07);
        border: none !important;
    }

    .outcome
    {
        background: var(--base02) !important;
    }

    .que h1,
    .que h2
    {
        color: var(--base0E);
    }

    .que h3
    {
        color: var(--base08);
    }

    .que h4
    {
        color: var(--base09);
    }

    .que h5
    {
        color: var(--base0A);
    }

    .que h6
    {
        color: var(--base0B);
    }

    .text-danger
    {
        color: var(--base08) !important;
    }

    footer
    {
        display: none;
    }

    select
    {
        background: var(--base02) !important;
        color: var(--base07) !important;
        border: 1px solid var(--base01) !important;
    }

    .activity-navigation
    {
        border-radius: 1rem;
    }

    .navbar-bootswatch
    {
        background: var(--base01);
    }

    .course-content ul li.section.main
    {
        border-bottom: 1px solid var(--base03);
    }

    .btn-link
    {
        background: none !important;
    }
    }