@-moz-document domain("www.learn.ed.ac.uk") {
    /* ==UserStyle==
    @name           UoE Learn - Base16 Dark
    @author         tcmal
    @description    Base16 dark theme
    @license        MIT
    ==/UserStyle== */
    
    :root {
        --base00: #<%- base["00"]["hex"] %>;
        --base01: #<%- base["01"]["hex"] %>;
        --base02: #<%- base["02"]["hex"] %>;
        --base03: #<%- base["03"]["hex"] %>;
        --base04: #<%- base["04"]["hex"] %>;
        --base05: #<%- base["05"]["hex"] %>;
        --base06: #<%- base["06"]["hex"] %>;
        --base07: #<%- base["07"]["hex"] %>;
        --base08: #<%- base["08"]["hex"] %>;
        --base09: #<%- base["09"]["hex"] %>;
        --base0A: #<%- base["0A"]["hex"] %>;
        --base0B: #<%- base["0B"]["hex"] %>;
        --base0C: #<%- base["0C"]["hex"] %>;
        --base0D: #<%- base["0D"]["hex"] %>;
        --base0E: #<%- base["0E"]["hex"] %>;
        --base0F: #<%- base["0F"]["hex"] %>;
    }
    
    /* Homepage */
    .contentPaneWide {
        background: var(--base02);
    }
    .container, .portlet {
        background: var(--base00);
        border: none;
    }

    .portlet > h2 {
        background: none;
        color: var(--base07);
        border-bottom: 2px solid var(--base06);
    }

    .portlet h3 {
        color: var(--base05);   
    }

    .dataBlockLabel {
        color: var(--base05) !important;
    }

    a {
        color: var(--base0D);
    }

    .paneTabs {
        background: var(--base01);
        border: none;
        color: var(--base07);
    }
    .paneTabs #paneTabs .active a {
        color: var(--base07);
    }
    .paneTabs #paneTabs a {
        color: var(--base0C);
        border: none;
    }

    #topTabs {
        background: var(--base01) !important;
    }
    #globalNavPageNavArea .bouncer {
        border-bottom: 1px solid var(--base06);
    }

    .appTabs td.active {
        border-bottom: 5px solid var(--base0C);
    }

    #badgeTotalCount {
        background-color: var(--base0C);
        color: var(--base00);
    }

    .courseListing > li {
        border-top: 1px solid var(--base02) !important;
    }
    .courseListing > li:first-child {
        border-top: none !important;
    }

    /* Content Pages */
    .contentPane, .locationPane {
        background: var(--base02) !important;
    }
    .contentPane .shadow {
        border-top-color: var(--base02);
    }

    #menuWrap, #courseMenuPalette, #courseMenuPalette *,
    #courseMenuPalette div.navPaletteContent {
        background: var(--base01) !important;
    }
    #pageTitleText span {   
        color: var(--base07) !important;
    }

    #breadcrumbs {
        background: var(--base01);
    }
    .breadcrumbs li *, .contentList .details .contextItemDetailsHeaders,
    ul#content_listContainer {
        color: var(--base07) !important;
    }

    ul#content_listContainer h3 * {
        color: var(--base0E) !important;   
    }


    .flyout-menu, .flyout-menu .mybb-tools,
    .bottom-buttons {
        background: var(--base00);
    }
    .bottom-buttons li {
        border: none;
        color: var(--base07);
    }

    .bottom-buttons li a {
            filter: invert(100%);
        
    }
    .flyout-menu .accordion-wrapper,
    .flyout-menu .accordion_content,
    .flyout-menu .accordion_toggle * {
        background: var(--base01) !important;
        border-bottom: none !important;
        color: var(--base07) !important;
    }

    .flyout-menu .labelMenuItem {
        color: var(--base0E);
    }

    .accordion_content li a {
        color: var(--base0C);
    }

    #global-nav .more-tools {
        background: var(--base00);
    }
    .liItem {
        border: none !important;
    }
    .liItem:hover {
        background: initial;
        border: none !important;
    }

    /* Notifications */
    #side_nav {
        background: var(--base02);   
    }
    #streamHeader_alerts,
    #dynamic_filters_alerts.stream_dynamic_filters {
        background: var(--base01) !important;
    }
    .filter-content-wrapper h5 {
        color: var(--base07) !important;
        text-shadow: none !important;
    }
    #streamHeader_alerts .title-text {
        text-shadow: none;
        color: var(--base0E);
    }
    .vertical_filter .stream_dynamic_filters li a {
        color: var(--base0E);
        text-decoration: none;
    }

    .vertical_filter .stream_full,
    .left_stream_wrapper, #stream_currentFilterText_alerts {
        background: var(--base01) !important;
        color: var(--base07);
    }

    .stream_item.stream_new_entry,
    .stream_item:hover {
        background: var(--base00) !important;
        color: var(--base07);
        margin-bottom: 2rem !important;
    }

    .stream_item {
        border: none;
        box-shadow: none;
        background: var(--base01);   
    }


    .stream_item .announcementType {
        color: var(--base05);
    }
    .stream_item .announcementPosted *,
    .stream_item .announcementTitle,
    .stream_item .stream_datestamp {
        color: var(--base06);   
    }

    .stream_item .announcementTitle {
        color: var(--base0E);
    }

    .stream_item .announcementBody {
        color: var(--base07);
    }

    /* If something's hidden you want back, it's probably here */

    /* Hide Homepage right column */
    .containerPortal > #column1 {
        display: none;
    }

    .containerPortal > #column0 {
        width: 100%;
    }


    #module\:_4_1 #anonymous_element_5, /* Student caption from course list */
    #eesy-tab-inner, /* 'Learn Help' button */
    #quick_links_wrap, /* 'quick links' button */
    #filter_by_alerts, /* Filter buttons on notifications page */
    #contentPanel #copyright, /* Copyright notice */
    #courseMenuPalette .actionBarMicro, /* Left navigation bar special buttons */
    #navigationPane #puller /* Hide/Show left bar button */
    {
        display: none !important;
    }
}