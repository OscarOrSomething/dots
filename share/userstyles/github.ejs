@-moz-document domain('github.com') {

:root {
    --color-bg-canvas: #<%- base["00"]["hex"] %>;
    --color-bg-canvas-inset: #<%- base["00"]["hex"] %>;
    --color-bg-primary: #<%- base["01"]["hex"] %>;
    --color-header-bg: #<%- base["02"]["hex"] %>;
    --color-border-primary: #<%- base["02"]["hex"] %>;
    --color-border-secondary: #<%- base["02"]["hex"] %>;
    --color-btn-primary-bg: #<%- base["0C"]["hex"] %>;
    --color-text-primary: #<%- base["07"]["hex"] %>;
    --color-text-link: #<%- base["0C"]["hex"] %>;
}

}
