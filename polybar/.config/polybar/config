
[colors]
background = #190e3f
foreground = #fcfcfc

primary = #4a4c8c
secondary = #fbbea4
alert = #d65362

[bar/bar]
width = 100%
height = 27

background = ${colors.background}
foreground = ${colors.foreground}

fixed-center = true

font-0 = Consolas:size=11;1
font-1 = FontAwesome:size=10;1

padding = 2

modules-left = mpd
modules-center = i3
modules-right = mailcount battery time

cursor-click = pointer
cursor-scroll = ns-resize
wm-restack = i3

[module/i3]
type = internal/i3
strip-wsnumbers = true
format = <label-state> <label-mode>
wrapping-scroll = false

label-focused = %name%
label-focused-padding = 1
label-focused-background = ${colors.primary}

label-unfocused = %name%
label-unfocused-padding = 1
label-unfocused-background = ${colors.background}

label-urgent = %name%
label-urgent-padding = 1
label-urgent-background = ${colors.alert}

[module/time]
type = internal/date
time = %H:%M
label = %time%
label-padding-left = 1

[module/mpd]
type = internal/mpd
format-playing = %{A1:mpc next:} <label-song>%{A}
format-paused =
icon-next = >
label-song = %title%

[module/mailcount]
type = custom/script
exec = ~/.bin/mailcount
format-padding = 1
format-background = ${colors.alert}

interval = 2

[module/battery]
type = internal/battery

label-charging =  %time%
label-discharging =  %time%
label-full = 

time-format = %H:%M
format-padding = 1

format-charging-padding = 1

format-discharging-background = ${colors.primary}
format-discharging-padding = 1

format-full-background = ${colors.primary}
format-full-padding = 1
