
[colors]
background = #17194a
foreground = #ffffff

primary = #70B0CA
secondary = #C17C83
alert = #C4A8D2

[bar/bar]
enable-ipc = true
width = 100%
height = ${xrdb:polybar.height:32}
bottom = true

override-redirect = true

dpi = ${xrdb:Xft.dpi:-1}

background = ${colors.background}
foreground = ${colors.foreground}

fixed-center = true

font-1 = Fira Mono:size=11;1
font-0 = FontAwesome:size=11;1

padding = 2

modules-left = i3
modules-center = spotify nextevent
modules-right = time battery
tray-position = right

cursor-click = pointer
cursor-scroll = ns-resize

[module/nextevent]
type = custom/script
exec = ~/.bin/next-event

[module/spotify]
type = custom/ipc
hook-0 = echo ""
hook-1 = spotifyctl -q status --format '   %artist% - %title%,  '

click-left = "spotifyctl -q playpause"
click-right = "spotifyctl -q next"

[module/i3]
type = internal/i3
strip-wsnumbers = true
format = <label-state> <label-mode>
wrapping-scroll = false

label-focused = %name%
label-focused-padding = 2
label-focused-background = ${colors.primary}

label-unfocused = %name%
label-unfocused-padding = 2
label-unfocused-background = ${colors.background}

label-urgent = %name%
label-urgent-padding = 2
label-urgent-background = ${colors.alert}

[module/time]
type = internal/date
time = %H:%M
label = %time%
label-padding-right = 3

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD

label-charging =  %time%
label-discharging =  %time%
label-full = 

time-format = %H:%M
format-padding = 1

format-charging-padding = 3

format-discharging-background = ${colors.primary}
format-discharging-padding = 3

format-full-background = ${colors.primary}
format-full-padding = 3
