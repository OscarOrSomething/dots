# Resizing

mode "resize" {
  bindsym j resize shrink width 10 px or 10 ppt
	bindsym k resize grow height 10 px or 10 ppt
	bindsym l resize shrink height 10 px or 10 ppt
	bindsym semicolon resize grow width 10 px or 10 ppt

	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt

	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# ----- Personal Binds

# Essentials
bindsym $mod+Return exec --no-startup-id rofi -show combi
bindsym $mod+g exec --no-startup-id shutdown-menu
bindsym $mod+t exec --no-startup-id termite

# Toggle polybar
bindsym Mod1+a exec --no-startup-id toggle-bar

# Terminal apps
bindsym $mod+m exec --no-startup-id termite -e "bash -c 'ncmpcpp'"
bindsym $mod+e exec --no-startup-id termite -e "bash -c 'mutt'"
#bindsym $mod+i exec --no-startup-id termite -e "bash -c 'weechat'"

# Music
bindsym Mod1+p exec --no-startup-id mpc toggle
bindsym Mod1+Right exec --no-startup-id mpc next
bindsym Mod1+Left exec --no-startup-id mpc prev

bindsym Mod1+plus exec --no-startup-id "mpc volume +10; playerctl volume 10 +"
bindsym Mod1+minus exec --no-startup-id "mpc volume -10; playerctl volume 10 -"

bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% 

