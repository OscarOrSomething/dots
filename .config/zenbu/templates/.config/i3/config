set $mode_monitor (1) monitor (2) laptop
mode "$mode_monitor" {
	bindsym $mod+1 exec --no-startup-id display-monitor, mode "default"
	bindsym $mod+2 exec --no-startup-id display-laptop, mode "default"

	bindsym $mod+Escape mode "default"
}
bindsym $mod+o mode "$mode_monitor"


bar 
{
	colors {
		background {{colors.background}}
		statusline {{colors.foreground}}

		focused_workspace {{colors.accent}} {{colors.background}} {{colors.foreground}}
		active_workspace {{colors.background}} {{colors.background}} {{colors.foreground}}
		urgent_workspace {{colors.accent}} {{colors.accent}} {{colors.foreground}}
	}
	strip_workspace_numbers yes
	position bottom
	mode hide
	status_command i3status
}